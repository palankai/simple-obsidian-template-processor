{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "declaration": true,
    "removeComments": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
